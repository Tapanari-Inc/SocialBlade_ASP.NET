@using SocialBlade.ViewComponents
@model SocialBlade.Models.PostViewModels.DeletePostViewModel

@{
    ViewData["Title"] = "Delete";
}
@section stylesheets {
    <link href="~/css/styleCreate.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/js/initCreate.js"></script>
}
@{await Html.RenderPartialAsync("_Lights");}
@{await Html.RenderPartialAsync("_Menu");}
<form asp-action="Save" method="post" enctype="multipart/form-data">

    <div class="create-wrapper">
        <div class="create-header">
            <div class="row center" style="margin-bottom: 0px;">
                @await Component.InvokeAsync(typeof(ProfileComponent), new { viewName = "Post" })
                <h3>Post Edit</h3>
            </div>
        </div>
        <div class="create-content">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <i class="material-icons prefix">fingerprint</i>
            <input id="icon_prefix" type="text" value="Post ID" asp-for="ID" class="validate" disabled>
            <label for="icon_prefix">Post ID</label>
            <br />
            <br />
            <i class="material-icons prefix">delete_sweep</i>
            <textarea id="icon_prefix" type="text" placeholder="Show Post Content Here..." asp-for="Content" class="validate" disabled></textarea>
            <label for="icon_prefix">Post Content</label>
        </div>
        <div class="create-header center">

        </div>
    </div>
    <div class="submit-wrapper">
        <button type="submit" name="button" class="btn-flat waves-effect waves-gray delete" style="margin-right: 1vh;">Delete Post</button>
        <a asp-action="List" class="btn-flat waves-effect waves-gray delete">
            Cancel
        </a>
    </div>
</form>

