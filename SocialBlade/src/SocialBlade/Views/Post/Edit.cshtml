@using SocialBlade.ViewComponents
@model SocialBlade.Models.PostViewModels.EditPostViewModel

@{
    ViewData["Title"] = "Edit";
}
@section stylesheets {
    <link href="~/css/styleCreate.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/js/initCreate.js"></script>
}
@{await Html.RenderPartialAsync("_Menu");}

<form asp-action="Save" method="post" enctype="multipart/form-data">

    <div class="create-wrapper">
        <div class="create-header">
            <div class="row" style="margin-bottom: 0px;">
                @await Component.InvokeAsync(typeof(ProfileComponent), new { viewName = "Post" })
            </div>
        </div>
        <div class="create-content">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <textarea asp-for="Content" rows="20" cols="40" placeholder="What's on your mind?"></textarea>
            <span asp-validation-for="Content" class="text-danger" />
        </div>
        <div class="create-footer">
            <span asp-validation-for="Image" class="addImg" >Upload Image</span>
            <div class="file-field input-field fileIn" style="display: none;">
                <div class="btn">
                    <span>Upload Image</span>
                    <input asp-for="Image">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
        </div>
    </div>
    <div class="submit-wrapper">
        <button type="submit" name="button" class="btn-flat waves-effect waves-gray">Post</button>
    </div>
</form>

