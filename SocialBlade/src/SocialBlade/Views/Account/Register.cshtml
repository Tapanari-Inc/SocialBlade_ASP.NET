@model RegisterViewModel
@{
    ViewData["Title"] = "Sign Up for Free";
}
@section stylesheets
{
    <link href="css/register.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link rel="stylesheet" href="/css/styleLogin.css" />
}
<div class="row">
    <h4 class="center-align">@ViewData["Title"]</h4>
</div>
<div class="row">
    <form class="col s12 m4 offset-m4"  asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"  method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="FirstName" type="text" class="validate">
                <label asp-for="FirstName">First Name</label>
            </div>
            <div class="input-field col s6">
                <input asp-for="LastName" type="text" class="validate">
                <label asp-for="LastName">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Email" type="email" class="validate">
                <label asp-for="Email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Password" type="password" class="validate">
                <label asp-for="Password">Password</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="ConfirmPassword" type="password" class="validate">
                <label asp-for="ConfirmPassword">Confirm password</label>
            </div>
        </div>
        <div class="col s10 offset-s1 center-align">
            <button class="btn waves-effect waves-light center-align" type="submit" name="action">
                Register
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>

