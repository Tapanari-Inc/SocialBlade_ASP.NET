@model string
@using System.Threading.Tasks
@using SocialBlade.ViewComponents

@section stylesheets
{
    <link rel="stylesheet" href="/css/styleProfile.css" />
    <link rel="stylesheet" href="/css/styleExplore.css" />
    <link rel="stylesheet" href="/css/followButtons.css"/>
}
@section scripts
{
    <script src="/js/initExplore.js"></script>
    <script src="~/js/followLogic.js"></script>
    <script src="~/js/reactionLogic.js"></script>
    <script src="/js/followButtonsLogic.js"></script>
}
@{
    ViewData["Title"] = "My Profile";
}

@{await Html.RenderPartialAsync("_Menu");}
@await Component.InvokeAsync(typeof(ProfileComponent), new { viewName = "Details", userId = Model });
@await Component.InvokeAsync(typeof(PostListComponent), new {type = PostListComponent.ListType.UserOnly, userId = Model })