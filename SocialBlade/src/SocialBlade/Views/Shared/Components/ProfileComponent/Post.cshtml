@model SocialBlade.Models.AccountViewModels.ProfileViewModel
<a asp-action="Details" asp-controller="Account" asp-route-id="@Model.UserId">
    <input type="hidden" asp-for="@Model.UserId" />
    <div class="col s2 image-container center">
        <img class="circle profilePic" src="@Model.ProfilePictureUrl">
    </div>
    <div class="col s6 username-container">
        <span class="left">@Model.FullName</span>
    </div>
</a>