@model SocialBlade.Models.AccountViewModels.ProfileViewModel
@inject UserManager<ApplicationUser> UserManager
<div class="create-wrapper">
    <div class="profile-info">
        <div class="profileStats z-depth-4">
            <div class="row" style="margin: 0;">
                <input type="hidden" asp-for="@Model.ID" />
                <div class="statImg-c">
                    <img class="circle statPic" src="@Model.ProfilePictureUrl">
                </div>
                <div class="other-info">
                    <div class="userName flow-text right-align">
                        @Model.FullName
                    </div>
                    <div class="followers flow-text right-align">
                        <span id="followersValue">@Model.FollowersCountDisplay</span> followers
                    </div>
                    <div class="fpo flow-text right-align">
                        @Model.PostsCountDisplay posts   @Model.FollowingCountDisplay following
                    </div>
                </div>
            </div>
        </div>
        <div class="actions">
            @if (Model.ID == UserManager.GetUserId(User))
            {
                <a asp-action="Edit" asp-controller="Account" class="btn btn-flat waves-effect waves-green edit">Edit Profile</a>
                <form id='profileLogOffForm' asp-action="LogOff" asp-controller="Account">
                    <a onclick="document.getElementById('profileLogOffForm').submit()"
                       class="btn btn-flat waves-effect waves-red edit">Log Off</a>
                </form>
            }
            else
            {
                <a class="follow-btn btn btn-flat waves-effect waves-green edit
                   @if (Model.IsFollowed)
                   {
                       @:following
                   }">Follow</a>
            }
        </div>
    </div>
</div>